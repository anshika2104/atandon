
#include <stdio.h>
#include<string.h>
int main()
{
    char s[100],c;
    int i;
    
    printf("enter string");
    gets(s);
    printf("enter character to search");
    c=getchar();
    for(i=0;i<s[i];i++){
        if(s[i]==c)
        printf("character %c found at %d",c,i);
    }

    return 0;
}
